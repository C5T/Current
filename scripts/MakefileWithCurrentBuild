# Create or update `current.build`. Use the plain `Makefile` if there is no need in that file.

SCRIPTS_DIR := $(shell dirname "$(shell readlink "${PWD}/Makefile")")
include ${SCRIPTS_DIR}/MakefileImpl

phony_current_build:
	@(\
	  export CPLUSPLUS="$(CPLUSPLUS)"; \
	  export CPPFLAGS="$(CPPFLAGS)"; \
	  export LDFLAGS="$(LDFLAGS)"; \
	"${SCRIPTS_DIR}/gen-current-build.sh" current.build) || (echo '`gen-current-build.sh` failed.' && exit 1)
