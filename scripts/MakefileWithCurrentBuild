# Create or update `current.build`. Use the plain `Makefile` if there is no need in that file.

.PHONY: phony_current_build

include $(shell readlink "${PWD}/Makefile")Impl

phony_current_build:
	@(\
	  export CPLUSPLUS="$(CPLUSPLUS)"; \
	  export CPPFLAGS="$(CPPFLAGS)"; \
	  export LDFLAGS="$(LDFLAGS)"; \
	"${SCRIPTS_DIR}/gen-current-build.sh" current_build.h) || (echo '`gen-current-build.sh` failed.' && exit 1)
